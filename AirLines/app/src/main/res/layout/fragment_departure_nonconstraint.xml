<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        tools:context=".DepartureNonconstraintFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/depart_title"
                android:textColor="@color/colorRed"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_depart_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGrey"
                android:textSize="20sp"
                android:gravity="end"
                tools:text="16 SEP 2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9.5dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_depart_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/free_seats"
                android:textSize="12sp"
                android:textColor="@color/colorLightGrey"
                tools:text="Free seats: 3"/>
            <TextView
                android:id="@+id/tv_depart_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="22sp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:gravity="end|top"
                android:textAlignment="gravity"

                tools:text="435 BYN"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="44dp"
            android:paddingEnd="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_depart_deppoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="MSQ"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_flight"
                android:tint="@color/colorIndigo" />
            <TextView
                android:id="@+id/tv_depart_arrpoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                android:gravity="end"
                tools:text="FLO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="11.5dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_depart_takeoff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                tools:text="00:20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_airplane_takeoff"
                android:tint="@color/colorIndigo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_trending_flat"
                android:tint="@color/colorGrey" />

            <TextView
                android:id="@+id/tv_depart_landing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                tools:text="09:20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_airplane_landing"
                android:tint="@color/colorIndigo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_depart_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="8dp"
                    android:gravity="top"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawableTint="@color/colorLightGrey"
                    android:drawablePadding="8dp"
                    tools:text="9:00" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/return_title"
                android:textColor="@color/colorLightBlue"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_return_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGrey"
                android:textSize="20sp"
                android:gravity="end"
                tools:text="17 SEP 2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9.5dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_return_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/free_seats"
                android:textSize="12sp"
                android:textColor="@color/colorLightGrey"
                tools:text="Free seats: 5"/>
            <TextView
                android:id="@+id/tv_return_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="22sp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:gravity="end|top"
                android:textAlignment="gravity"

                tools:text="488 BYN"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="44dp"
            android:paddingEnd="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_return_deppoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="FLO"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_flight"
                android:tint="@color/colorIndigo" />
            <TextView
                android:id="@+id/tv_return_arrpoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                android:gravity="end"
                tools:text="MSQ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="11.5dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_return_takeoff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                tools:text="05:10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_airplane_takeoff"
                android:tint="@color/colorIndigo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_trending_flat"
                android:tint="@color/colorGrey" />

            <TextView
                android:id="@+id/tv_return_landing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                tools:text="09:20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_airplane_landing"
                android:tint="@color/colorIndigo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_return_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="8dp"
                    android:gravity="top"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_clock"
                    android:drawableTint="@color/colorLightGrey"
                    android:drawablePadding="8dp"
                    tools:text="4:10" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:backgroundTint="@color/colorLime"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/colorLime"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>