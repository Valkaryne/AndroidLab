<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        tools:context=".DepartureNonconstraintFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">
            <TextView
                android:id="@+id/tv_depart_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/depart_title"
                android:textColor="@color/colorRed"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_depart_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/tv_depart_title"
                android:textColor="@color/colorGrey"
                android:textSize="20sp"
                tools:text="16 SEP 2019"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_depart_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:layout_gravity="center_vertical"
                android:text="@string/free_seats"
                android:textSize="12sp"
                android:textColor="@color/colorLightGrey"
                tools:text="Free seats: 3"/>
            <TextView
                android:id="@+id/tv_depart_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:gravity="end"
                android:textAlignment="gravity"
                tools:text="435 BYN"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9.5dp"
            android:paddingHorizontal="44dp">
            <TextView
                android:id="@+id/tv_depart_deppoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="MSQ"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="0.5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:rotation="90"
                android:src="@drawable/ic_airplane"
                android:tint="@color/colorIndigo"
                />
            <TextView
                android:id="@+id/tv_depart_arrpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="FLO"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="11dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/tv_depart_takeoff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_airplane_takeoff"
                android:drawableTint="@color/colorIndigo"
                android:drawablePadding="10dp"
                tools:text="00:20"/>
            <ImageView
                android:id="@+id/iv_depart_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/tv_depart_takeoff_time"
                android:src="@drawable/ic_trending_flat"
                android:tint="@color/colorGrey"/>
            <TextView
                android:id="@+id/tv_depart_landing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_depart_until"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_airplane_landing"
                android:drawableTint="@color/colorIndigo"
                android:drawablePadding="10dp"
                tools:text="00:20"/>
            <TextView
                android:id="@+id/tv_depart_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorLightGrey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="@color/colorLightGrey"
                android:drawablePadding="8dp"
                tools:text="9:00"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="15dp">
            <TextView
                android:id="@+id/tv_return_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/return_title"
                android:textColor="@color/colorLightBlue"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignBaseline="@id/tv_return_title"
                android:textColor="@color/colorGrey"
                android:textSize="20sp"
                tools:text="17 SEP 2019"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_return_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/free_seats"
                android:textSize="12sp"
                android:textColor="@color/colorLightGrey"
                tools:text="Free seats: 5"/>
            <TextView
                android:id="@+id/tv_return_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:gravity="end"
                android:textAlignment="gravity"
                tools:text="488 BYN"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingHorizontal="44dp">
            <TextView
                android:id="@+id/tv_return_deppoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="FLO"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginStart="0.5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:rotation="90"
                android:src="@drawable/ic_airplane"
                android:tint="@color/colorIndigo"
                />
            <TextView
                android:id="@+id/tv_return_arrpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="38sp"
                android:textColor="@color/colorLime"
                tools:text="MSQ"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="11dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/tv_return_takeoff_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_airplane_takeoff"
                android:drawableTint="@color/colorIndigo"
                android:drawablePadding="10dp"
                tools:text="05:10"/>
            <ImageView
                android:id="@+id/iv_return_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/tv_return_takeoff_time"
                android:src="@drawable/ic_trending_flat"
                android:tint="@color/colorGrey"/>
            <TextView
                android:id="@+id/tv_return_landing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_return_until"
                android:textColor="@color/colorGrey"
                android:textSize="18sp"
                android:drawableEnd="@drawable/ic_airplane_landing"
                android:drawableTint="@color/colorIndigo"
                android:drawablePadding="10dp"
                tools:text="00:20"/>
            <TextView
                android:id="@+id/tv_return_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorLightGrey"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="@color/colorLightGrey"
                android:drawablePadding="8dp"
                tools:text="4:10"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                android:backgroundTint="@color/colorLime"
                android:tint="@android:color/white"
                app:backgroundTint="@color/colorLime"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>